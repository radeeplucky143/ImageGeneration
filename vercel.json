{
  "version": 2,
  "builds": [
    { 
      "src": "app.py", 
      "use": "@vercel/python",
      "config": {
        "pythonVersion": "3.11",
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "app.py" }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "functions": {
    "app.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 